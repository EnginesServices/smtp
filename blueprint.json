{
  "title": "smtp",
  "description": "email server",
  "memory_usage": 96,
  "licenses": [
  ],
  "bindings": [
    {
      "identifier": "spool",
      "descriptor": {
        "repository": "https://github.com/EnginesServices/filesystem.git",
        "branch": "spaces"
      },
      "variables": {
        "path": "/var/^^identifier^^/postfix/",
        "user": "postfix",
        "group": "postfix",
        "fw_user": "postfix"
      }
    },
    {
      "identifier": "dkim",
      "descriptor": {
        "repository": "https://github.com/EnginesServices/filesystem.git",
        "branch": "spaces"
      },
      "variables": {
        "path": "/etc/opendkim/keys",
        "user": "",
        "group": "postfix",
        "fw_user": "postfix"
      }
    }
  ],
  "stages": [
    {
      "starter": {
        "image": "engines/servicebase",
        "tag": "current"
      },
      "os_packages": [
        {
          "name": "postfix"
        },
        {
          "name": "opendkim"
        },
        {
          "name": "opendkim-tools"
        }
      ]
    }
  ]
}
